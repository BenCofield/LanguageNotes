<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"

    x:Class="LanguageNotes.NoteCardsPage"
    Title="Flashcards">

    <!-- _____Start Content____ -->

    <StackLayout Margin="20,35,20,20">
                
        <CollectionView ItemsSource="{Binding Categories, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                            
                    <StackLayout>
                        <Frame BindingContext="{Binding .}"
                                Margin="20">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="Open_Category"/>
                            </Frame.GestureRecognizers>
                            <Label Text="{Binding Name}"/>
                        </Frame>
                    </StackLayout>

                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="New Category"
            Clicked="On_AddNewCategory"/>

    </StackLayout>

</ContentPage>

